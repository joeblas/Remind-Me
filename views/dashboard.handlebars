<div class="container">

	<br>

	<!-- Jumbotron -->
	<div class="jumbotron">
		<h1 class="text-center">Hello, {{firstname}}</h1>
	</div>
	<!-- Create Reminder Panel-->
	<div class="row">
		<div class="col-lg-6">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Add Reminder</h3>
				</div>
				<div class="panel-body">
					<form class="form-group">
						<div class="form-group">
							<label for="comment-input">Enter Your Reminder</label>
							<textarea class="form-control" id="reminder-input" rows="5" placeholder="Type your reminder here and then click Remind Me!"></textarea>
						</div>
						<div class="form-group">
							<label class="control-label" for="phonenumber"></label>
							<input class="form-control" id="phonenumber" name="phonenumber" placeholder="(XXX)XXX-XXXX" type="text" value="{{username}}" />
						</div>
						<button class="btn btn-primary" id="add-reminder" type="submit">Remind Me</button>
					</form>
				</div>
			</div>
		</div>

		<!-- Recent Reminders -->
		<div class="col-lg-6">
			<table class="table">
				<thead>
					<tr>
						<th>Messages Sent</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						{{!-- Display reminders that have been sent associated to the user logged in. --}}
					</tr>
				</tbody>

			</table>
		</div>
	</div>
</div>